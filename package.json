{
  "name": "@vercel/slack-bolt",
  "version": "0.1.0",
  "description": "A Vercel receiver for building Slack apps with Bolt and deploying them to Vercel",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "commonjs",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.ts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vercel/vercel-bolt.git"
  },
  "bugs": {
    "url": "https://github.com/vercel/vercel-bolt/issues"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "version-packages": "changeset version",
    "changeset": "changeset",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [
    "vercel",
    "bolt",
    "slack"
  ],
  "author": "Vercel",
  "license": "MIT",
  "dependencies": {
    "@slack/logger": "^4.0.0",
    "@vercel/functions": "^2.2.7",
    "tsscmp": "^1.0.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@changesets/cli": "^2.29.5",
    "@types/node": "^20.19.9",
    "@types/tsscmp": "^1.0.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@slack/bolt": "^4.4.0"
  },
  "peerDependenciesMeta": {
    "@slack/bolt": {
      "optional": false
    }
  },
  "packageManager": "pnpm@9.4.0",
  "publishConfig": {
    "access": "public"
  }
}
